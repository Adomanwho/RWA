@model IEnumerable<WebApp.ViewModels.VMLocationBook>

@{
    ViewData["Title"] = "Location-Book Assignments";
}

<h1>Location-Book Assignments</h1>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-success">Add New</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookName - @item.LocationName</td>
                <td>
                    <a asp-action="Update" asp-route-bookName="@item.BookName" asp-route-locationName="@item.LocationName" class="btn btn-primary btn-sm me-2">Edit</a>
                    @using (Html.BeginForm("Delete", "LocationBook", FormMethod.Post, new { @class = "d-inline" }))
                    {
                        @Html.Hidden("bookName", item.BookName)
                        @Html.Hidden("locationName", item.LocationName)
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
